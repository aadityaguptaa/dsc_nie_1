<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LoginSignUpMenuLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/LoginSignUpCodeImageView"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/codeimage"
            app:layout_constraintBottom_toTopOf="@+id/LoginSignupPageLoginButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.42000002"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/ic_google_developers" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/LoginSignupPageLoginButton"
            style="@style/Widget.DSCNIE.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/log_in"
            app:icon="@drawable/ic_baseline_login_24"
            app:iconTint="#000000"
            android:backgroundTint="@color/colorPrimaryDark"
            app:layout_constraintBottom_toTopOf="@+id/LoginSignupPageSignUpButton"
            app:layout_constraintEnd_toEndOf="@+id/LoginSignUpCodeImageView"
            app:layout_constraintStart_toStartOf="@+id/LoginSignUpCodeImageView"
            app:layout_constraintTop_toBottomOf="@+id/LoginSignUpCodeImageView"
             />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/LoginSignupPageSignUpButton"
            style="@style/Widget.DSCNIE.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/sign_up"
            app:icon="@drawable/ic_baseline_add_24"
            app:iconTint="#000000"
            android:backgroundTint="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/LoginSignUpCodeImageView"
            app:layout_constraintStart_toStartOf="@+id/LoginSignUpCodeImageView"
            app:layout_constraintTop_toBottomOf="@+id/LoginSignupPageLoginButton"
             />
    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>